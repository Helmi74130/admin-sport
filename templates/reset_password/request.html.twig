{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="m-5">Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-7">
            {{ form_row(requestForm.email) }}
                <small>
                    Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            <div class="col-7 mt-4 mb-5">
            <button class="btn btn-primary">Envoyer un e-mail</button>
            </div>
        </div>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
