{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="d-flex flex-column align-items-center">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row col-11 col-lg-6 justify-content-center rounded shadow mt-5">
            <h1 class="text-center pt-4 mb-3">Contact</h1>
            <div class="col-10">{{ form_row(form.name) }}</div>
            <div class="col-10">{{ form_row(form.subject) }}</div>
            <div class="col-10">{{ form_row(form.message) }}</div>
            <div class="col-10">{{ form_row(form.email) }}</div>
            <button type="submit" class="btn btn-outline-info col-5 mt-3 mb-5">Envoyer</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
