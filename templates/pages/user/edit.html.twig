{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}

{{ form_start(form) }}
    <h1 class="m-5">Modifier un utilisateur</h1>

    <div class="container">
        <div class="row justify-content-around shadow">
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.civility) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.firstname) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.name) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.phone) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.city) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.isActive) }}</div>
            <div class="col-lg-5 col-12 text-center  d-none mt-3">{{ form_row(form.roles) }}</div>
        </div>
        <button class="btn btn-outline-warning m-5 align-self-end">Modifier</button>
    </div>

    {{ form_end(form) }}
{% endblock %}