{% extends 'base.html.twig' %}

{% block title %}Gérants de Franchises{% endblock %}

{% block body %}
{{ dump() }}
    <h1 class="m-5">Gérants de franchises</h1>
    <div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}
    {% if not leaders.items is same as ([]) %}
        <div class="row justify-content-between">
            <p class="col">Il y'a {{ leaders.getTotalItemCount }} gérant(s) de franchises au total</p>
            <div class="col d-flex justify-content-end">
                <a class="btn btn-outline-success" href="{{ path('app_ajouter_leader') }}">Ajouter un Gérant de franchises</a>
            </div>
        </div>
        <div class="row justify-content-around">
            {% for leader in leaders %}
                <div class="card col-5 mt-4 p-0 rounded shadow {{ leader.isActive ? '' : 'opacity-50' }}">
                    <div class="card-header d-flex justify-content-between bg-primary">
                        <h5 class="fs-3 mt-2 lh-lg {{ leader.isActive ? 'text-light' : 'text-danger' }}">{{ leader.civility }} {{ leader.name }} {{ leader.firstname}}</h5>
                        <p class="{{ leader.isActive ? 'text-success' : 'text-danger' }}">{{ leader.isActive ? 'En activité' : 'Ce gérant est désactivé' }}</p>
                    </div>
                    <div class="card-body">
                            <div class="card-text pt-2 text-primary">
                                <div class="row">
                                    <p class="col-4">E-mail:</p>
                                    <p class="col">{{ leader.email }}</p>
                                </div>
                                <div class="row ">
                                    <p class="col-4">Ville</p>
                                    <p class="col">{{ leader.city }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4">Tél:</p>
                                    <p class="col">{{ leader.phone }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4">Tél. commercial: </p>
                                    {% if leader.commercialPhone == '' %}
                                        <p class="col text-warning">Aucun tél. renseigné</p>
                                    {% else %}
                                        <p class="col">{{ leader.commercialPhone }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        <div class="d-flex justify-content-end mt-3">
                            <a href="{{ path('app_leader_view',{id: leader.id}) }}" type="button" class="btn btn-outline-info rounded btn-sm me-4">Voir les salles</a>
                            <a type="button" class="btn btn-outline-primary rounded btn-sm me-4" data-bs-toggle="modal" data-bs-target="#editModal{{ leader.id }}">Editer</a>
                            <a type="button" class="btn btn-outline-danger rounded btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ leader.id }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        </div>
        <div class="navigation d-flex justify-content-center mt-5">
        {{ knp_pagination_render(leaders) }}
    {% else %}
        <h2 class="mt-5 lh-lg">Aucun gérant(e) de franchise pour le moment, veuillez cliquer sur le bouton ajouter pour commencer!</h2>
        <div class="col d-flex justify-content-end">
            <a class="btn btn-outline-success" href="{{ path('app_ajouter_leader') }}">Ajouter un Gérant</a>
        </div>
    {% endif %}
    </div>

    {% for leader in leaders %}
        <!-- Modal delete-->
        <div class="modal fade" id="deleteModal{{ leader.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Voulez-vous supprimer le gérant {{ leader.name }} {{ leader.firstname }}?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-danger">
                        <p>Attention toutes suppressions est définitive!</p>
                        <p>En supprimant un gérant vous acceptez de supprimer les salles associés ainsi que les permissions</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
                        <a href="{{ path('app_supprimer_leader', {id: leader.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
        </div>


        <!-- Modal edit-->
        <div class="modal fade" id="editModal{{ leader.id }}" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Voulez-vous modifier le gérant {{ leader.name }} {{ leader.firstname }}?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-warning">
                        <p>Attention toutes modifications est définitive!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
                        <a href=" {{ path('app_leader_editer', {id: leader.id}) }}" type="button" class="btn btn-warning">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
