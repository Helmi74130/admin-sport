{% extends 'base.html.twig' %}

{% block title %}My Apps | Ajouter un Gérant{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ dump() }}
    <h1 class="m-5">Ajouter un Gérant</h1>
    <div class="container">
        <div class="row text-warning fs-1 bg-primary p-5 shadow">
            <h2 class="text-center text-danger fs-2">Avant de continuer veuillez lier l'utilisateur avec le gérant</h2>
            <p>{{ form_row(form.user) }}</p>
        </div>
        <div class="col-3 text-center mt-3 form-check form-switch fs-2">{{ form_row(form.isActive) }}</div>
        <div class="row justify-content-around shadow">
            <div class="col-5 text-center mt-3">{{ form_row(form.civility) }}</div>
            <div class="col-5 text-center mt-3">{{ form_row(form.name) }}</div>
            <div class="col-5 text-center mt-3">{{ form_row(form.firstname) }}</div>
            <div class="col-5 text-center mt-3">{{ form_row(form.phone) }}</div>
            <div class="col-5 text-center mt-3">{{ form_row(form.city) }}</div>
            <div class="col-5 text-center mt-3">{{ form_row(form.commercialPhone) }}</div>
        </div>
        <button class="btn btn-outline-warning m-5 align-self-end">Ajouter</button>
    </div>
    {{ form_end(form) }}
{% endblock %}