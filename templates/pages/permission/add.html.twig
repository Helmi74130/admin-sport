{% extends 'base.html.twig' %}

{% block title %}My Apps | Ajouter une Permission{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <h1 class="m-5">Ajouter une permission</h1>

    <div class="container">
        <div class="row text-warning fs-1 bg-primary p-5 shadow">
            <h2 class="text-center text-danger fs-2">Avant de continuer veuillez lier la permission avec la salle</h2>
            <p>{{ form_row(form.hall) }}</p>
        </div>

        <div class="row justify-content-around mt-5">
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p>{{ form_widget(form.isSellDrinks) }}</p>
            </div>
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p>{{ form_row(form.isMembersWrite) }}</p>
            </div>
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p class="">{{ form_row(form.isMembersRead) }}</p>
            </div>
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p>{{ form_row(form.isMembersAdd) }}</p>
            </div>
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p>{{ form_row(form.isMembersStatistiqueRead) }}</p>
            </div>
            <div class="col-5 text-center mb-5 form-check form-switch border-bottom">
                <p>{{ form_row(form.isPaymentSchedulesWrite) }}</p>
            </div>
            <div class="col-5 text-center  form-check form-switch border-bottom">
                <p>{{ form_row(form.isPaymentSchedulesAdd) }}</p>
            </div>
        </div>
        <div class=" d-flex flex-column col-12 mt-2">
            <button class=" btn btn-outline-warning align-self-end btn-lg">Ajouter</button>
        </div>
    </div>


    {{ form_end(form) }}

{% endblock %}