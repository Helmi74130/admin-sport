{% extends 'base.html.twig' %}

{% block title %}My Apps | Permission{% endblock %}

{% block body %}

    <h1 class="m-5">GÃ©rer les permissions</h1>
        <div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}
            {% if not permissions.items is same as ([]) %}
                <div class="row justify-content-between">
                    <p class="col">Il y'a {{ permissions.getTotalItemCount }} permissions au total</p>
                    <div class="col d-flex justify-content-end">
                        <a class="btn btn-outline-success" href="{{ path('app_ajouter') }}">Ajouter une permission</a>
                    </div>
                </div>
                <div class="row justify-content-around">
                {% for permission in permissions %}
                <div class="card col-5 mt-4">
                    <h5 class="card-header">{{ permission.id }}</h5>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <div>
                            <a href="{{ path('app_editer', {id: permission.id}) }}" class="btn btn-primary">Editer</a>
                            <a href="{{ path('app_supprimer', {id: permission.id}) }}" class="btn btn-danger">Supprimer</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    <div class="navigation d-flex justify-content-center mt-5">
        {{ knp_pagination_render(permissions) }}
        {% else %}
        <h2>Il n'y a pas de permission</h2>
        {% endif %}
    </div>
{% endblock %}
