{% extends 'base.html.twig' %}

{% block title %}My Apps | Salles{% endblock %}

{% block body %}

    <h1 class="m-5">Gérer les Salles</h1>
        <div class="container">
            {% for message in app.flashes('success-salle') %}
                <div class="alert alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            {% if not halls.items is same as ([]) %}
                <div class="row justify-content-between">
                    <p class="col">Il y'a {{ halls.getTotalItemCount }} salles au total</p>
                    <div class="col d-flex justify-content-end">
                        <a class="btn btn-outline-success" href="{{ path('app_salle_ajouter') }}">Ajouter une salle</a>
                    </div>
                </div>
                <div class="row justify-content-around">
                    {% for hall in halls %}
                        <div class="card col-12 mt-5 p-0 bg-secondary rounded shadow {{ hall.isactive ? '' : 'opacity-50' }}">
                            <div class="card-header d-flex justify-content-between bg-primary text-light">
                                <div class="{{ hall.isactive ? 'text-light' : 'text-danger' }} mt-2 fs-2">
                                    <p class="text-center">Salle: {{ hall.name }} </p>
                                </div>
                                <p class="text-danger">{{ hall.isActive ? '' : 'Cette salle est désactivée' }}</p>
                            </div>
                            <div class="card-body p-0">
                                <div class="row card-title mt-3">
                                    <h5 class="col-5 fs-4 ms-3"> Gérant: Mr {{ hall.leader.name}} {{ hall.leader.firstname}}</h5>
                                    <div class="col-5 d-flex justify-content-end">
                                        <a type="button" class="btn btn-outline-warning rounded btn-sm me-4" href=" {{ path('app_salle_editer', {id: hall.id}) }}">Editer</a>
                                        <a type="button" class="btn btn-outline-danger rounded btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ hall.id }}">Supprimer</a>
                                    </div>
                                </div>
                                <div class="row">
                                    {% if hall.imageName == "" %}
                                        {#<div style="height: 400px" class="col-5">
                                            <img alt="image de salle de sport" height="300px" class="col-11" src="images/hall/ORANGE_BLEUE-1.png">
                                            <p class="text-warning text-center">Cette salle n'a pas de photo actuellement, cliqué sur éditer pour ajouter une photo</p>
                                        </div>#}
                                    {% else %}
                                        <img alt="image de salle de sport" class="col-5 " height="400px" src="{{ vich_uploader_asset(hall, 'imageFile') }}">
                                    {% endif %}
                                    <div class="card-text mt-2 pt-3 col-6 fs-4">
                                        <div class="row">
                                            <p class="col-4 text-primary">N° de rue:</p>
                                            <p class="col">{{ hall.streetNumber }}</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-4 text-primary">Adresse: </p>
                                            <p class="col">{{ hall.adress }}</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-4 text-primary">Code Postale:</p>
                                            <p class="col">{{ hall.postalCode }}</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-4 text-primary">Ville: </p>
                                            <p class="col">{{ hall.city }}</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-4 text-primary">Téléphone:</p>
                                            <p class="col">{{ hall.phone }}</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-12 text-primary">Déscription:</p>
                                            <p class="col12">{{ hall.shortDescription }}</p>
                                        </div>
                                        <p class="text-danger fs-4">{{ hall.isactive ? '' : 'Cette salle n\'est pas en activitée actuellement' }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                </div>
        <div class="navigation d-flex justify-content-center mt-5">
            {{ knp_pagination_render(halls) }}
            {% else %}
            <h1>Il n'y a pas de salles actuellements, cliquer sur le bouton ajouter pour commencer!</h1>
                <div class="col d-flex justify-content-end">
                    <a class="btn btn-outline-success" href="{{ path('app_salle_ajouter') }}">Ajouter une salle</a>
                </div>
            {% endif %}
        </div>


    {% for hall in halls %}
        <!-- Modal delete-->
        <div class="modal fade" id="deleteModal{{ hall.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Voulez-vous supprimer la salle: {{ hall.name }}?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-danger">
                        <p>Attention toutes modifications est définitive!</p>
                        <p>En supprimant la salle vous acceptez de supprimer la permission associé!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
                        <a href="{{ path('app_salle_supprimer', {id: hall.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
        </div>

        {{ dump() }}
    {% endfor %}


{% endblock %}


