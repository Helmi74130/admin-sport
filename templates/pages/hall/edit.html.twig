{% extends 'base.html.twig' %}

{% block title %}Modifier une Salle{% endblock %}

{% block body %}
    <style>
        .img img{
            height: 200px;
            width: 200px;
        }
    </style>
    {{ form_start(form) }}
    <h1 class="m-5">Modifier une salle</h1>
    <div class="container">
        <div class="col-3 text-center mt-3 form-check form-switch fs-2">{{ form_row(form.isactive) }}</div>
        <div class="row justify-content-around shadow">
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.name) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.streetNumber) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.adress) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.city) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.phone) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.postalCode) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3 img">{{ form_row(form.imageFile) }}</div>
            <div class="col-lg-5 col-12 text-center mt-3">{{ form_row(form.shortDescription) }}</div>
        </div>
        <button class="btn btn-outline-warning m-5 align-self-end">Modifier</button>
    </div>
    {{ form_end(form) }}
{% endblock %}