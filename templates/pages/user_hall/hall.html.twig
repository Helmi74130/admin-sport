{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-around">
            {% for hall in halls %}
                <div class="card col-12 mt-5 p-0 bg-secondary rounded shadow {{ hall.isactive ? '' : 'opacity-50' }}">
                    <div class="card-header d-flex justify-content-between bg-primary text-light">
                        <div class="{{ hall.isactive ? 'text-light' : 'text-danger' }} mt-2 fs-2">
                            <p class="text-center">Salle: {{ hall.name }} </p>
                        </div>
                        <p class="text-danger">{{ hall.isActive ? '' : 'Cette salle est désactivée' }}</p>
                    </div>
                    <div class="card-body p-0">
                        <div class="row card-title mt-3">
                            <h5 class="col-5 fs-4 ms-3"> Gérant: Mr {{ hall.leader.name}} {{ hall.leader.firstname}}</h5>
                            <div class="col-5 d-flex justify-content-end">
                                <a type="button" class="btn btn-outline-warning" href="{{ path('app_user_hall_permission', { id: hall.id }) }}">Modules de votre salle: {{ hall.name }}</a>
                            </div>
                        </div>
                        <div class="row">
                            {% if hall.imageName == "" %}
                                <img alt="image de salle de sport" class="col-5 " height="400px" src="images/hall/orange bleu.jpg">
                            {% else %}
                                <img alt="image de salle de sport" class="col-5 " height="400px" src="{{ vich_uploader_asset(hall, 'imageFile') }}">
                            {% endif %}
                            <div class="card-text mt-2 pt-3 col-6 fs-4">
                                <div class="row">
                                    <p class="col-4 text-primary">N° de rue:</p>
                                    <p class="col">{{ hall.streetNumber }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4 text-primary">Adresse: </p>
                                    <p class="col">{{ hall.adress }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4 text-primary">Code Postale:</p>
                                    <p class="col">{{ hall.postalCode }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4 text-primary">Ville: </p>
                                    <p class="col">{{ hall.city }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-4 text-primary">Téléphone:</p>
                                    <p class="col">{{ hall.phone }}</p>
                                </div>
                                <div class="row">
                                    <p class="col-12 text-primary">Déscription:</p>
                                    <p class="col12">{{ hall.shortDescription }}</p>
                                </div>
                                <p class="text-danger fs-4">{{ hall.isactive ? '' : 'Votre salle n\'est pas en activitée actuellement' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
