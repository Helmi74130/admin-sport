{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    {{ dump() }}
    <div class="container">
        <div class="row justify-content-center">
            <form class="col-12 d-flex flex-column align-items-center mb-5" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes déja connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}
                <div class="row col-12 col-lg-6 justify-content-center rounded shadow mt-5">
                    <h1 class="text-center pt-4 mb-3">Connectez-vous</h1>
                    <div class="col-8 mt-5">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="col-8 mt-4">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="col-8 checkbox mt-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <div class="col-8 mt-3">
                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
                    </div>
                    <div class="col-8 pb-5 mt-4">
                        <button class="btn  btn-outline-info col-lg-4 col-8" type="submit">
                            Connexion
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
